<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-brand">
                <h3 class="logo"><%= config.title %></h3>
                <p><%= config.description %></p>
            </div>

            <div>
                <h4>快速链接</h4>
                <nav class="footer-links">
                    <% Object.keys(theme.menu).forEach(function(key) { %>
                    <a href="<%= url_for(theme.menu[key]) %>"><%= key %></a>
                    <% }); %>
                </nav>
            </div>

            <div>
                <h4>分类</h4>
                <nav class="footer-links">
                    <% theme.footer.links.forEach(function(link) { %>
                    <a href="<%= url_for(link.url) %>"><%= link.title %></a>
                    <% }); %>
                </nav>
            </div>
        </div>

        <div class="footer-bottom">
            <p><%= theme.footer.copyright %></p>
            <p>Powered by <a href="https://hexo.io" target="_blank">Hexo</a></p>
        </div>
    </div>
</footer>
