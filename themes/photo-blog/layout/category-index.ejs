<div class="categories-index-page">
    <div class="container">
        <div class="page-header">
            <h1>分类</h1>
            <p class="lead">共 <%= page.categories.length %> 个分类</p>
        </div>

        <div class="categories-list">
            <% page.categories.each(function(category) { %>
            <% if (category.length) { %>
            <div class="category-item">
                <a href="<%= url_for(category.path) %>" class="category-main">
                    <div class="category-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
                        </svg>
                    </div>
                    <div class="category-info">
                        <h2 class="category-name"><%= category.name %></h2>
                        <div class="category-meta">
                            <span class="category-count"><%= category.length %> 篇文章</span>
                        </div>
                    </div>
                    <svg class="category-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </a>
                <% if (category.posts.first()) { %>
                <div class="category-latest">
                    <span class="latest-label">最新文章</span>
                    <a href="<%= url_for(category.posts.first().path) %>" class="latest-title"><%= category.posts.first().title %></a>
                    <span class="latest-date"><%= date(category.posts.first().date, 'YYYY-MM-DD') %></span>
                </div>
                <% } %>
            </div>
            <% } %>
            <% }); %>
        </div>
    </div>
</div>
